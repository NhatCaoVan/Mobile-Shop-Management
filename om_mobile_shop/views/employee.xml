<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_kanban" model="ir.ui.view">
        <field name="name">employee.kanban</field>
        <field name="model">employee</field>
        <field name="arch" type="xml">
            <kanban default_order="id asc">
                <field name="name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">employee.tree</field>
        <field name="model">employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">employee.form</field>
        <field name="model">employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="image"/>
                        </group>
                        <group>
                            <field name="gender" invisible="context.get('hide_gender')"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_action" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="mobiles_root"
              name="Mobile Shop"
              sequence="1"/>

    <menuitem id="mobiles_employee"
              name="Employee"
              parent="mobiles_root"
              sequence="1"/>
</odoo>